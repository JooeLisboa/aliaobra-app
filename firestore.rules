
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // AliaObra Application Rules
    // ====================================

    // Users collection for clients
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Providers & Agencies collection
    match /providers/{providerId} {
      // Anyone can read a provider's public profile
      allow read: if true;
      // Only the authenticated user can create their own provider profile
      allow create: if request.auth.uid == providerId;
      // Only the provider can update their own profile details
      // Note: Review creation is handled by a secure server action/transaction
      allow update: if request.auth.uid == providerId;
    }

    // Services (jobs) collection
    match /services/{serviceId} {
      // Anyone can read the list of open services
      allow read: if true;
      // Only the authenticated owner can create a service
      allow create: if request.auth.uid == request.resource.data.clientId;
      // Only the owner can update their service (e.g., to edit or accept a proposal)
      allow update: if request.auth.uid == resource.data.clientId;

      // Proposals subcollection
      match /proposals/{proposalId} {
        // Only the service owner can read the proposals for their service
        allow read: if request.auth.uid == get(/databases/$(database)/documents/services/$(serviceId)).data.clientId;
        // A provider can only create a proposal for themselves
        allow create: if request.auth.uid == request.resource.data.providerId;
      }
    }

    // Chats collection
    match /chats/{chatId} {
      // A user can only read or write to a chat if they are a participant
      allow read, write: if request.auth.uid in resource.data.participantIds;
      
      // Messages subcollection inherits the parent rule, but we make it explicit for clarity
      match /messages/{messageId} {
         allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }


    // Stripe Payments Extension Rules
    // ====================================

    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }
  }
}
