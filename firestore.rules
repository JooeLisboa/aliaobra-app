rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // AliaObra Application Rules
    // ===================================

    // Providers can be read by anyone.
    // They can only be created/deleted/updated by the owner, except for adding reviews.
    match /providers/{providerId} {
      allow read: if true;
      allow create, delete: if request.auth.uid == providerId;
      // An update is allowed if it's the owner OR if an authenticated user is adding a review.
      // The server-side action handles the logic of calculating the new rating and review count.
      allow update: if request.auth.uid == providerId || 
                       (request.auth.uid != null && request.resource.data.reviews.size() > resource.data.reviews.size());
    }
    
    // Users can only manage their own data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Services can be read by anyone. 
    // They can be created by any authenticated user.
    // They can only be updated by the client who created them.
    match /services/{serviceId} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.clientId;
      
      // Proposals can be created by any authenticated user (providers).
      // They can only be read or updated by the client who owns the parent service.
      match /proposals/{proposalId} {
        allow create: if request.auth.uid != null;
        allow read, update: if get(/databases/$(database)/documents/services/$(serviceId)).data.clientId == request.auth.uid;
      }
    }

    // Chat documents and messages can only be read/written by participants of the chat.
    match /chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
         allow read, write: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participantIds;
      }
    }
    
    // Stripe Payments Extension Rules
    // ==========================================
    
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }
  }
}
